<Attributes 
    xmlns="urn:mace:shibboleth:2.0:attribute-map" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Fourth, the SAML 2.0 NameID Format: -->
    <Attribute name="urn:oasis:names:tc:SAML:2.0:nameid-format:persistent" id="persistent-id">
        <AttributeDecoder xsi:type="NameIDAttributeDecoder" formatter="$NameQualifier!$SPNameQualifier!$Name" defaultQualifiers="true"/>
    </Attribute>
    <!-- SPID Attributes -->
    <!-- Primary -->
    <Attribute name="spidCode" id="spid-attribute-spidCode" nameFormat="xsi:string"/>
    <Attribute name="name" id="spid-attribute-name"  nameFormat="xsi:string"/>
    <Attribute name="familyName" id="spid-attribute-familyName"  nameFormat="xsi:string"/>
    <Attribute name="placeOfBirth" id="spid-attribute-placeOfBirth"  nameFormat="xsi:string"/>
    <Attribute name="countyOfBirth" id="spid-attribute-countyOfBirth"  nameFormat="xsi:string"/>
    <Attribute name="dateOfBirth" id="spid-attribute-dateOfBirth"  nameFormat="xsi:string"/>
    <Attribute name="gender" id="spid-attribute-gender"  nameFormat="xsi:string"/>
    <Attribute name="companyName" id="spid-attribute-companyName"  nameFormat="xsi:string"/>
    <Attribute name="registeredOffice" id="spid-attribute-registeredOffice"  nameFormat="xsi:string"/>
    <Attribute name="fiscalNumber" id="spid-attribute-fiscalNumber"  nameFormat="xsi:string"/>
    <Attribute name="ivaCode" id="spid-attribute-ivaCode"  nameFormat="xsi:string"/>
    <!-- Secondary -->
    <Attribute name="idCard" id="spid-attribute-idCard"  nameFormat="xsi:string"/>
    <Attribute name="mobilePhone" id="spid-attribute-mobilePhone"  nameFormat="xsi:string"/>
    <Attribute name="email" id="spid-attribute-email"  nameFormat="xsi:string"/>
    <Attribute name="address" id="spid-attribute-address"  nameFormat="xsi:string"/>
    <Attribute name="expirationDate" id="spid-attribute-expirationDate"  nameFormat="xsi:string"/>
    <Attribute name="digitalAddress" id="spid-attribute-digitalAddress"  nameFormat="xsi:string"/>
    <!-- First some useful eduPerson attributes that many sites might use. -->
    <Attribute name="urn:mace:dir:attribute-def:eduPersonPrincipalName" id="eppn">
        <AttributeDecoder xsi:type="ScopedAttributeDecoder"/>
    </Attribute>
    <Attribute name="urn:oid:1.3.6.1.4.1.5923.1.1.1.6" id="eppn">
        <AttributeDecoder xsi:type="ScopedAttributeDecoder"/>
    </Attribute>
    <!-- First, the deprecated version, decoded as a scoped string: -->
    <Attribute name="urn:mace:dir:attribute-def:eduPersonTargetedID" id="targeted-id">
        <AttributeDecoder xsi:type="ScopedAttributeDecoder"/>
    </Attribute>
    <!-- Third, the new version (note the OID-style name): -->
    <Attribute name="urn:oid:1.3.6.1.4.1.5923.1.1.1.10" id="persistent-id">
        <AttributeDecoder xsi:type="NameIDAttributeDecoder" formatter="$NameQualifier!$SPNameQualifier!$Name" defaultQualifiers="true"/>
    </Attribute>
    <!-- Fourth, the SAML 2.0 NameID Format: -->
    <Attribute name="urn:oasis:names:tc:SAML:2.0:nameid-format:persistent" id="persistent-id">
        <AttributeDecoder xsi:type="NameIDAttributeDecoder" formatter="$NameQualifier!$SPNameQualifier!$Name" defaultQualifiers="true"/>
    </Attribute>
</Attributes>